# ============================================
# EditorConfig Configuration
# Maintains consistent coding styles across editors
# https://editorconfig.org/
# ============================================

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# CSS, SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configuration files
[*.config.{js,mjs,ts}]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

[package-lock.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# Environment files
[.env*]
insert_final_newline = false
trim_trailing_whitespace = false

# Git files
[.git*]
insert_final_newline = false

# Prisma files
[*.prisma]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Shell scripts (if any)
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows batch files (if any)
[*.{bat,cmd}]
end_of_line = crlf

# Binary files - no formatting
[*.{jpg,jpeg,png,gif,ico,webp,avif,bmp,tiff,woff,woff2,eot,ttf,otf,pdf,zip,tar,gz}]
insert_final_newline = false
trim_trailing_whitespace = false