  # ============================================
  # ENVIRONMENT SETUP GUIDE
  # ============================================
  # - Development: Use .env.local (Docker PostgreSQL)
  # - Staging: Configure in Vercel Dashboard (Preview env)
  # - Production: Configure in Vercel Dashboard (Production env)
  #
  # Copy this file to .env.local for development
  # DO NOT commit .env.local, .env.staging, or .env.production

  # Database
  # Local: postgresql://michel_admin:admin@localhost:5430/db_clinica_michel_dev
  # Staging: postgresql://[user]:[pass]@[neon-staging-host]/[dbname]?sslmode=require
  # Production: postgresql://[user]:[pass]@[neon-prod-host]/[dbname]?sslmode=require
  DATABASE_URL="postgresql://username:password@host/database?sslmode=require"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# Email Service (SendGrid)
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# Image Storage (Cloudinary - next-cloudinary)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_API_KEY="123456789012345"
CLOUDINARY_API_SECRET="your-api-secret-key"

# Google Calendar Integration (opcional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REFRESH_TOKEN="your-google-refresh-token"
GOOGLE_CALENDAR_ID="your-calendar-id@gmail.com"

# Next.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Admin Default Credentials
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-secure-password"

# Environment (automatic in production)
NODE_ENV="development"
