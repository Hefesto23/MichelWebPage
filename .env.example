  # ============================================
  # ENVIRONMENT SETUP GUIDE
  # ============================================
  # - Development: Use .env.local (Docker PostgreSQL)
  # - Staging: Use .env.staging here and Configure in Vercel Dashboard (Preview env)
  # - Production: Use .env here Configure in Vercel Dashboard (Production env)
  #

  # DO NOT commit .env.local, .env.staging, or .env to Git!

  # ============================================
  # ENVIRONMENT CONFIGURATION
  # ============================================
  # APP_ENV controla o ambiente da aplicação e pasta do Cloudinary:
  # - "development" → Local (michel-psi/dev)
  # - "staging" → Staging (michel-psi/staging)
  # - "production" → Production (michel-psi/prod)
  #
  # No Vercel, NÃO defina APP_ENV - use VERCEL_ENV automático:
  # - VERCEL_ENV="preview" → michel-psi/staging
  # - VERCEL_ENV="production" → michel-psi/prod
  APP_ENV="staging"
  NEXT_PUBLIC_APP_URL="https://staging-seu-app.vercel.app"

  # ============================================
  # DATABASE
  # ============================================
  # Local: postgresql://[user]:[pass]@localhost:5430/db_clinica_michel_dev
  # Staging: postgresql://[user]:[pass]@[neon-staging-host]/[dbname]?sslmode=require
  # Production: postgresql://[user]:[pass]@[neon-prod-host]/[dbname]?sslmode=require
  DATABASE_URL="postgresql://username:password@host/database?sslmode=require"
# DATABASE_URL='postgresql://neondb_owner:npg_20cbDngjZyUt@ep-broad-pine-acfxgn8l-pooler.sa-east-1.aws.neon.tech/michel_psi_db?sslmode=require&channel_binding=require'

  # ============================================
  # AUTHENTICATION (2)
  # ============================================
  JWT_SECRET="min-32-chars"
  ADMIN_EMAIL="admin@example.com"
  ADMIN_PASSWORD="secure-password"

  # ============================================
  # EMAIL - Gmail/Nodemailer (3)
  # ============================================
  GMAIL_USER="your@gmail.com"
  GMAIL_APP_PASSWORD="16-char-app-password"
  SMTP_HOST="smtp.gmail.com"           # Opcional
  SMTP_PORT="587"                       # Opcional
  CLINIC_EMAIL="clinic@example.com"
  CLINIC_NAME="Michel de Camargo"      # Opcional

  # ============================================
  # CLOUDINARY (4)
  # ============================================
  NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud"
  NEXT_PUBLIC_CLOUDINARY_API_KEY="123456789012345"
  CLOUDINARY_API_SECRET="your-secret"

  # ⚙️ CLOUDINARY_FOLDER (OPCIONAL - AUTO-DETECTA AMBIENTE)
  # Se não definido, o sistema detecta automaticamente:
  # - Local (dev): michel-psi/dev
  # - Vercel Preview (staging): michel-psi/staging
  # - Vercel Production: michel-psi/prod
  #
  # Use CLOUDINARY_FOLDER apenas para override manual:
  # CLOUDINARY_FOLDER="michel-psi/prod"

  # ============================================
  # GOOGLE CALENDAR (5)
  # ============================================
  GOOGLE_CREDENTIALS='{"type":"service_account"...}'
  GOOGLE_CALENDAR_ID="calendar@gmail.com"
